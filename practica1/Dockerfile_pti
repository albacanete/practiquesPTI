FROM ubuntu:16.04
RUN apt-get update && \
	apt-get install -y gcc && \
    apt-get install -y vim && \
    apt-get install -y python && \
    apt-get install -y apache2 && \
    a2enmod cgi && \
    apt-get install -y git && \
    apt-get install -y wget

	